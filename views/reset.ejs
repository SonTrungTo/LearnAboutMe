<%- include('_header') %>

  <h1 class="mt-3">Reset Password</h1>

  <form method="post">
    <div class="form-group row">
      <label for="reset" class="col-sm-2 col-form-label">Reset password:</label>
      <div class="col-sm-10">
        <input type="password" name="password" id="reset"
        class="form-control" required />
      </div>
    </div>
    <div class="form-group row">
      <label for="confirm" class="col-sm-2 col-form-label">Retype password:</label>
      <div class="col-sm-10">
        <input type="password" name="confirm" id="confirm"
        class="form-control" required />
      </div>
    </div>
    <input type="submit" value="Reset Password" class="btn btn-primary btn-block" />
  </form>
<%- include('_footer') %>
